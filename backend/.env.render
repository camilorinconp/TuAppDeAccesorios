# ============================================
# CONFIGURACIÓN PARA RENDER (TEMPLATE)
# ============================================
# IMPORTANTE: NO SUBIR ESTE ARCHIVO CON VALORES REALES
# Configurar estas variables en el dashboard de Render

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
# Render automáticamente configurará DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:port/database

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================
# CRÍTICO: Generar valores seguros en Render dashboard
SECRET_KEY=RENDER_WILL_GENERATE_THIS
DATABASE_MASTER_KEY=RENDER_WILL_GENERATE_THIS
BACKUP_ENCRYPTION_KEY=RENDER_WILL_GENERATE_THIS

# ============================================
# CONFIGURACIÓN DE APLICACIÓN
# ============================================
ENVIRONMENT=production
PROJECT_NAME=TuAppDeAccesorios
LOG_LEVEL=INFO

# ============================================
# CONFIGURACIÓN DE REDIS
# ============================================
# Render automáticamente configurará REDIS_URL
# REDIS_URL=redis://user:password@host:port
REDIS_CACHE_ENABLED=true
REDIS_CACHE_DEFAULT_TTL=300

# ============================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ============================================
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CONFIGURACIÓN DE CORS Y SEGURIDAD
# ============================================
# IMPORTANTE: Actualizar con tu dominio de Render
CORS_ORIGINS=https://tu-app-frontend.onrender.com,https://tudominio.com
ALLOWED_HOSTS=tu-backend.onrender.com,tudominio.com

# ============================================
# CONFIGURACIÓN DE SSL/TLS
# ============================================
FORCE_HTTPS=true
SECURE_COOKIES=true

# ============================================
# CONFIGURACIÓN DE RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=10

# ============================================
# CONFIGURACIÓN DE MONITOREO
# ============================================
PROMETHEUS_ENABLED=false
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================
# CONFIGURACIÓN DE AUDITORÍA
# ============================================
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365
AUDIT_LOG_SENSITIVE_DATA=false
AUDIT_ASYNC_LOGGING=true

# ============================================
# CONFIGURACIÓN DE BACKUPS
# ============================================
BACKUP_ENABLED=true
BACKUP_LOCAL_DIR=/opt/render/project/src/backups
BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=tu-bucket-s3
# AWS_ACCESS_KEY_ID=tu-access-key
# AWS_SECRET_ACCESS_KEY=tu-secret-key
# AWS_REGION=us-east-1

# ============================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=noreply@tudominio.com
# SMTP_PASSWORD=tu-password-smtp
# ALERT_EMAIL=admin@tudominio.com

# ============================================
# CONFIGURACIÓN DE WEBHOOKS
# ============================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ============================================
# CONFIGURACIÓN DE PERFORMANCE
# ============================================
WORKERS=2
TIMEOUT=120
MAX_UPLOAD_SIZE=10485760